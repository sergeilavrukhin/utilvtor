FROM python:3.8.12-alpine
ENV PYTHONUNBUFFERED 1

RUN mkdir /code
WORKDIR /code

RUN apk update && apk --no-cache add gcc musl-dev libxslt-dev python3-dev bash nano mc htop bzip2 tzdata

COPY ./requirements/flask.txt requirements.txt

RUN pip install --upgrade pip && pip3 install -r requirements.txt

COPY ./src/flask /code/
EXPOSE 5000